scalar Time
scalar UUID

type User {
  id: UUID
  username: String
  email: String
  avatarUrl: String
  createdAt: Time
  updatedAt: Time
}

input signupInput {
  username: String!
  email: String!
  password: String! 
}

input loginInput {
  credential: String! # email or username
  password: String!
}

type Mutation {
  signup(input: signupInput!): User
  login(input: loginInput!): User
}

type Query {
  getUser: User
}